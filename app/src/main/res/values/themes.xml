<resources>
    <!-- Base application theme. -->
    <style name="Theme.AR154" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DefaultCustomProgressBarStyle">
        <item name="progress_color">@color/white</item>
        <item name="indicator_color">@color/green</item>
        <item name="shadow_color">@color/black</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">87%</item>
        <item name="android:windowMinWidthMinor">87%</item>
    </style>

</resources>