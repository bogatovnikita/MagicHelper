<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ar.cleaner.first.pf.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_firstScanningFragment"
            app:destination="@id/firstScanningFragment"
            app:popUpTo="@id/nav_main" />
    </fragment>

    <fragment
        android:id="@+id/firstScanningFragment"
        android:name="ar.cleaner.first.pf.ui.first_scanning.FirstScanningFragment"
        android:label="FirstScanningFragment"
        tools:layout="@layout/fragment_first_scanning">
        <action
            android:id="@+id/action_firstScanningFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/nav_main" />
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="ar.cleaner.first.pf.ui.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu"/>
    <action
        android:id="@+id/action_to_batteryFragment"
        app:destination="@id/batteryFragment" />

    <action
        android:id="@+id/action_to_boostFragment"
        app:destination="@id/boostFragment" />

    <fragment
        android:id="@+id/boostFragment"
        android:name="ar.cleaner.first.pf.ui.boost.general.BoostFragment"
        android:label="BoostFragment"
        tools:layout="@layout/fragment_boost">
        <action
            android:id="@+id/action_boostFragment_to_boostProgressFragment"
            app:destination="@id/boostProgressFragment"
            app:popUpTo="@id/boostFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/boostProgressFragment"
        android:name="ar.cleaner.first.pf.ui.boost.progress.BoostProgressFragment"
        android:label="BoostProgressFragment"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/action_boostProgressFragment_to_boostResultFragment"
            app:destination="@id/boostResultFragment"
            app:popUpTo="@id/boostProgressFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/boostResultFragment"
        android:name="ar.cleaner.first.pf.ui.boost.result.BoostResultFragment"
        android:label="BoostResultFragment"
        tools:layout="@layout/fragment_boost_result" />

    <fragment
        android:id="@+id/batteryFragment"
        android:name="ar.cleaner.first.pf.ui.battery.BatteryFragment"
        android:label="BatteryFragment"
        tools:layout="@layout/fragment_battery">
        <action
            android:id="@+id/action_batteryFragment_to_batteryProgressFragment"
            app:destination="@id/batteryProgressFragment"
            app:popUpTo="@id/batteryFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/batteryProgressFragment"
        android:name="ar.cleaner.first.pf.ui.battery.BatteryProgressFragment"
        android:label="BatteryProgressFragment"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/action_batteryProgressFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/batteryProgressFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/temperatureFragment"
        android:name="ar.cleaner.first.pf.ui.temperature.TemperatureFragment"
        android:label="TemperatureFragment"
        tools:layout="@layout/fragment_temperature">
        <action
            android:id="@+id/action_temperatureFragment_to_temperatureProgressFragment"
            app:destination="@id/temperatureProgressFragment"
            app:popUpTo="@id/temperatureFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/temperatureProgressFragment"
        android:name="ar.cleaner.first.pf.ui.temperature.TemperatureProgressFragment"
        android:label="CoolingProgressFragment"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/action_temperatureProgressFragment_to_temperatureResultListFragment"
            app:destination="@id/temperatureResultFragment"
            app:popUpTo="@id/temperatureFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="ar.cleaner.first.pf.ui.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="value"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/temperatureResultFragment"
        android:name="ar.cleaner.first.pf.ui.temperature.TemperatureResultFragment"
        android:label="TemperatureResultListFragment"
        tools:layout="@layout/fragment_temperature_result" />

    <action
        android:id="@+id/action_to_temperatureFragment"
        app:destination="@id/temperatureFragment" />

</navigation>