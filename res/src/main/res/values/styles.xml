<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textSize">@dimen/Text.18</item>
    </style>

    <style name="Dialog"/>

    <style name="Dialog.Button">
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">@dimen/Text.12</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Dialog.Button.Cancel">
        <item name="android:background">@drawable/background_button_cancel</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Dialog.Button.Ok">
        <item name="android:background">@drawable/background_button_allow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:textSize">@dimen/Text.16</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
    </style>

    <style name="Dialog.Description">
        <item name="android:textAppearance">@style/Text.Regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/Text.14</item>
    </style>


</resources>