<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="file_apps_manager_chip">

        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:background">@drawable/bg_file_apps_manager_chip</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/button_checkbox</item>
        <item name="buttonTint">@color/green</item>
    </style>

    <style name="Text.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Regular</item>
    </style>

    <style name="Text.ListItem.Title">
        <item name="android:textSize">@dimen/Text.16</item>
    </style>

    <style name="Text.ListItem.Description">
        <item name="android:textSize">@dimen/Text.14</item>
        <item name="android:textColor">@color/file_app_manager_text_gray</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ListItemRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/bg_list_item</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="SortPopupItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/green</item>
        <item name="android:textSize">@dimen/Text.18</item>
        <item name="android:button">@drawable/button_checkbox</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">4dp</item>
    </style>


</resources>