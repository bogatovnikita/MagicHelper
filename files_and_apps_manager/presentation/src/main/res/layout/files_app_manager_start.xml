<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_for_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_for_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />


    <ImageView
        android:id="@+id/background_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="@id/guideline_for_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/arrow_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_arrow_back"
        app:layout_constraintEnd_toStartOf="@id/title_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_for_arrow_back" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/heraclito_medium"
        android:text="@string/deleting_files"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/arrow_back_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrow_back_iv"
        app:layout_constraintTop_toTopOf="@id/arrow_back_iv" />

    <View
        android:id="@+id/card_for_info_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_for_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <TextView
        android:id="@+id/memory_use_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/heraclito_medium"
        android:text="@string/memory_used"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/card_for_info_v"
        app:layout_constraintTop_toTopOf="@id/card_for_info_v" />

    <TextView
        android:id="@+id/percentage_used_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/heraclito_medium"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/memory_use_tv"
        app:layout_constraintTop_toBottomOf="@id/memory_use_tv"
        tools:text="75%" />

    <TextView
        android:id="@+id/gigabyte_used_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/heraclito_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/percentage_used_tv"
        app:layout_constraintEnd_toEndOf="@id/card_for_info_v"
        app:layout_constraintTop_toBottomOf="@id/memory_use_tv"
        tools:text="60,0 Гб / 64,0 Гб" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:progressDrawable="@drawable/progress_bar_gradient"
        app:layout_constraintBottom_toBottomOf="@id/card_for_info_v"
        app:layout_constraintEnd_toEndOf="@id/card_for_info_v"
        app:layout_constraintStart_toStartOf="@id/card_for_info_v"
        app:layout_constraintTop_toBottomOf="@+id/percentage_used_tv"
        tools:progress="80" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/danger_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:ellipsize="end"
        android:fontFamily="@font/heraclito_medium"
        android:maxLines="2"
        android:padding="8dp"
        android:paddingHorizontal="@dimen/_4sdp"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/scan_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_for_background"
        tools:background="@drawable/background_button_danger"
        tools:text="Вы можете удалить ненужные файлы, чтобы освободить память в вашем телефоне!"
        tools:textColor="@color/red" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/heraclito_medium"
        android:gravity="center"
        android:text="@string/scan"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/danger_button" />


</androidx.constraintlayout.widget.ConstraintLayout>