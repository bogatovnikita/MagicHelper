<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginHorizontal="16dp"
    android:paddingHorizontal="12dp"
    android:background="@drawable/background_list_item"
    android:gravity="center"
    android:paddingTop="8dp"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_unknown"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/name"
            tools:text="Name of document.mp3"
            style="@style/Text.ListItem.Title"/>

        <TextView
            android:id="@+id/description"
            style="@style/Text.ListItem.Description"
            tools:text="128 Кб • /storage/emulated/0/ WhatsApp /WhatsApp Documents/Name of document.doc"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox"
        style="@style/CheckBox"/>


</LinearLayout>